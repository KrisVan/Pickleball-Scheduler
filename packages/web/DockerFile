# docker run -d --name frontend -p 5173:5173 ghcr.io/krisvan/pickleball-scheduler/frontend:20250508

# Stage 1: Build the app: 
  FROM node:20-alpine AS builder
  WORKDIR /app
  COPY package*.json ./
  RUN npm install
  COPY . .
  RUN npm run build
  EXPOSE 5173
  CMD [ "npm", "run", "preview" ]

