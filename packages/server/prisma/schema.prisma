// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  PId     Int       @id @default(autoincrement())
  PName   String
  Session Session[]
}

model Session {
  SId          Int      @id @default(autoincrement())
  CreationDate DateTime @default(now())
  StartTime    DateTime
  EndTime      DateTime
  PlayerId     Int
  // Links playerId to session
  player       Player   @relation(fields: [PlayerId], references: [PId])
}
